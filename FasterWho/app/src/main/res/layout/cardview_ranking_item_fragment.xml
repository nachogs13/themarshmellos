<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">
        <ImageView
            android:id="@+id/icon_list"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/diamante"
            tools:src="@drawable/diamante" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_gravity="bottom"
            android:background="#8c000000"
            android:padding="10dp"
            android:text="@string/ranking1"
            android:textColor="#FBFCFC"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_text_view"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_gravity="bottom"
            android:gravity="right|bottom"
            android:padding="10dp"
            android:text="Puntuación mínima: 5.000 pts"
            android:textColor="#ffe3e3e3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detail1_text_view"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_gravity="top"
            android:gravity="right|bottom"
            android:padding="10dp"
            android:text="BLOQUEADO"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>