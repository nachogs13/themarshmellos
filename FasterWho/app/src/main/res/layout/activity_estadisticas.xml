<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".RankingActivity" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top">
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:textSize="30sp"
            android:text="¡Actividad Completada!"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/ImagenLeyenda2"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ruta"
            tools:src="@drawable/ruta" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="top">


        <TextView
            android:id="@+id/result_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:textSize="20sp"
            android:text="Distancia total 5km"
            android:textColor="#4d5656 "/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="top">


        <TextView
            android:id="@+id/result_text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:textSize="20sp"
            android:text="Duración  00:40:59"
            android:textColor="#4d5656 "/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="top">


        <TextView
            android:id="@+id/result_text39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:textSize="20sp"
            android:text="Calorías  250"
            android:textColor="#4d5656 "/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/avatar9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/velocidad"
            tools:src="@drawable/velocidad" />

        <TextView
            android:id="@+id/velocidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Vel. media    04:30 min/km"

            android:textColor="#4d5656"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/avatar10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/velocidad"
            tools:src="@drawable/velocidad" />

        <TextView
            android:id="@+id/velocidad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Vel. máx    40 km/h"

            android:textColor="#4d5656"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ele"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/elevacion"
            tools:src="@drawable/elevacion" />

        <TextView
            android:id="@+id/elevacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Elev. gan. 113m"

            android:textColor="#4d5656"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ele2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/elevacion"
            tools:src="@drawable/elevacion" />

        <TextView
            android:id="@+id/elevacion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Elev. perd. 110m"

            android:textColor="#4d5656"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/reloj"
            tools:src="@drawable/reloj" />

        <TextView
            android:id="@+id/ini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Hora de inicio   20:36"

            android:textColor="#4d5656"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/buttonEstFinalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:padding="10dp"
            android:text="Finalizar" />
    </androidx.cardview.widget.CardView>
</LinearLayout>