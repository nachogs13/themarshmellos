<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ruta_image"
        android:layout_width="400px"
        android:layout_height="400px"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:src= "@drawable/senderismo"
        tools:src= "@drawable/senderismo"
        tools:ignore="PxUsage" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_ruta_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="@dimen/text_margin"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/main_ruta_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
        <RatingBar
            android:id="@+id/rtbHighScore"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:max="100"
            android:numStars="5"
            android:progressTint="@color/ambar_500"
            android:rating="0.0"
            android:stepSize="0.0" />
    </LinearLayout>

</LinearLayout>